<div class="shop-container">
  <div class="row">
    <% 3.times do %>
      <% @products.each do |product| %>
        <div class="col-4">
          <h5><%= product.name %></h5>
          <p><%= product.description %></p>
          <span><%= product.min_price  %></span>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
